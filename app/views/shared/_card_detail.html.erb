<div id="start" class='<%= card_name %>' style="transform: translateY(0px);">
  <div class="start-gift-card card-<%= card_name %> pos-2"><div class="value">$50</div></div>
  <div class="start-gift-card card-<%= card_name %> pos-1"><div class="value">$10</div></div>
  <div class="start-gift-card card-<%= card_name %> pos-0"><div class="value">$25</div></div>
</div>

<div id="title" class="" style="transform: translateY(0px);">
  <h1>DO you want some<br>Free <%= t ".#{card_name}" %><br>Gift Cards</h1>
  <div id="scroll-down">
    <svg width="100%" height="100%" version="1.1" style="fill-rule:evenodd; clip-rule:evenodd" viewBox="0 0 1289 730">
     <defs> <style type="text/css"> .scroll-down {fill:gray;fill-opacity:0.501961}  </style> </defs>
     <g> <polygon class="scroll-down" points="86,0 644,559 1203,0 1289,86 730,644 644,730 559,644 0,86 "></polygon> </g>
    </svg>
  </div>
</div>

<div id="page" class="" style="transform: translateY(0px);">
  <div class="page-about">
    <div class="background bck-<%= card_name %>"></div>
    <div class="logo logo-<%= card_name %>"></div>
    <div class="text">
      <p><%= t ".#{card_name}_intro" %></p>
      <div class="hidden" id="hidden_text">
        <div class="hidden-wrapper">
          <h2><%= t ".#{card_name}_how_get" %></h2>
          <p><%= t ".#{card_name}_ans_get" %></p>

          <h2><%= t ".#{card_name}_how_redeem" %></h2>
          <p><%= t ".#{card_name}_ans_redeem" %></p>

          <h2>How is this possible</h2>
          <p><%= t ".#{card_name}_possible" %></p>
        </div>
      </div>
    </div>
    <a class="read-more-link" href="javascript:void(0)">Read More</a>
  </div>

  <div class="title">Choose Gift<br>Card value</div>
  <div id="choose-card">
    <div id="chooser">
      <div class="choose-gift-card card-<%= card_name %>"><div class="value">$10</div></div>
      <div class="choose-gift-card card-<%= card_name %>"><div class="value">$25</div></div>
      <div class="choose-gift-card card-<%= card_name %>"><div class="value">$50</div></div>
    </div>
  </div>
</div>

<%= content_for :gearbox do %>
  <div id="gboverlay">
    <div id="gbmouse"></div>
    <div id="generatorbox" class="popup-<%= card_name %>">
      <div id="gbinner">
        <div id="steps">
          <div class="stepname active" id="step1">Connecting</div>
          <div class="stepname" id="step2">Generating</div>
          <div class="stepname" id="step3">Completed</div>
          <div id="statusbar">
            <div id="sbcomplete"></div>
            <div class="sbcirca active" id="sbcirca1"></div>
            <div class="sbcirca" id="sbcirca2"></div>
            <div class="sbcirca" id="sbcirca3"></div>
          </div>
        </div>
        <div id="genlogo" class="logo-<%= card_name %>"></div>
        <div id="genreturn" format="XXXXX-XXXXXX-XXXXXX-XXXXX"></div>
        <div id="statustext"></div>
        <div id="hacklines">
          <% ip_address = Faker::Internet.ip_v4_address %>
          <p class="level1">Connecting to <%= t ".card_name" %> server...</p>
          <p class="level1">Server is up at <%= ip_address %>:445 (latency 0.013s)</p>
          <p class="level1">Connecting to server SQL database...</p>
          <p class="level1">Obtaining a service manager handle...</p>
          <p class="level1">Creating a new service through pipeline...</p>
          <p class="level1">Closing service handle...</p>
          <p class="level1">Sending stage (749370 bytes) to <%= ip_address %></p>
          <p class="level1">Meterpreter session 1 opened at port 445</p>
          <p class="level1">Connected to <%= t ".card_name" %> server...</p>
          <p class="level2 longsearch">Searching database for unused codes...</p>
          <p class="level3 p-video">Success!</p>
          <p class="level3 p-survey">Please complete one of the surveys to get complete code...</p>
        </div>
        <div id="widgetholder"><div id="whclick"></div></div>
      </div>
    </div>
    <div id="animateCard" style="position: fixed; top: 327.8125px; left: 164.0078125px; margin: 0px; opacity: 0.5; z-index: 1; transform: scaleX(1.3306338028169016) scaleY(1.3380281690140845) rotateX(-90deg); display: none;">
      <div class="value">$10</div>
    </div>
  </div>
<% end %>
<script type="text/javascript">document.body.className += " page";</script>
